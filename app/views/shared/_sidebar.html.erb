<div id="sidebar">
  <div class="inner">

    <!-- Search -->
    <section id="search" class="alt">
      <%= form_with url: search_path, method: :get do |f| %>
        <%= f.text_field "search", id: "query", placeholder: "Pesquisar Molde" %>
      <% end %>
    </section>

    <!-- Menu -->
    <nav id="menu">
      <header class="major">
        <h2>Menu</h2>
      </header>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li>
          <span class="opener">Moldes</span>
          <ul>
            <li><%= link_to "Listar Moldes", moldes_path %></li>
            <li><%= link_to "Ciar Molde", new_molde_path %></li>
          </ul>
        </li>

        <li>
          <span class="opener">Manutenções</span>
          <ul>
            <li><%= link_to "Listar Manutenções", manutencaos_path %></li>
            <li><%= link_to "Ciar Manutenções", new_manutencao_path %></li>
          </ul>
        </li>

        <li>
          <span class="opener">Processos</span>
          <ul>
            <li><%= link_to "Listar Processos", processos_path %></li>
            <li><%= link_to "Ciar Processos", new_processo_path %></li>
          </ul>
        </li>

        <li>
          <span class="opener">Clientes</span>
          <ul>
            <li><%= link_to "Listar Clientes", clientes_path %></li>
            <li><%= link_to "Ciar Clientes", new_cliente_path %></li>
          </ul>
        </li>

        <% if user_signed_in? %>
          <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %></li>
        <% end %>
      </ul>
    </nav>

  </div>
</div>